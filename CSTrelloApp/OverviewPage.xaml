<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CSTrelloApp.OverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CSTrelloApp"
    xmlns:data="using:CSTrelloApp.Data"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="TaskItemTemplate" x:DataType="data:Task">
            <Border Padding="8" Margin="0,0,0,8" CornerRadius="6" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="{x:Bind Title}" 
                               FontWeight="Bold"
                               TextWrapping="Wrap"/>

                    <TextBlock Grid.Row="1" 
                               Text="{x:Bind Description}" 
                               TextWrapping="Wrap" 
                               MaxLines="2" 
                               FontSize="12" 
                               Foreground="{ThemeResource SystemControlForegroundBaseLowBrush}"
                               Margin="0,4,0,0"/>

                    <TextBlock Grid.Row="2" 
                               Text="{x:Bind AssignedTo}" 
                               FontSize="12" 
                               Foreground="{ThemeResource SystemControlForegroundBaseLowBrush}"
                               Margin="0,4,0,0"/>

                    <Button Grid.Row="3" 
                            Content="Edit" 
                            Tag="{x:Bind Id}"
                            Click="EditTask_Click"
                            HorizontalAlignment="Right"
                            Margin="0,8,0,0"
                            Padding="12,4"
                            FontSize="12"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>
    <Grid Padding="12" RowSpacing="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="ErrorTextBlock" Foreground="Red" Grid.Row="0" TextWrapping="Wrap" />

        <Grid Grid.Row="1" ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="To Do" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListView x:Name="ToDoList" 
                              SelectionMode="None" 
                              IsItemClickEnabled="False"
                              ItemTemplate="{StaticResource TaskItemTemplate}"/>
                </ScrollViewer>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Doing" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListView x:Name="DoingList" 
                              SelectionMode="None" 
                              IsItemClickEnabled="False"
                              ItemTemplate="{StaticResource TaskItemTemplate}"/>
                </ScrollViewer>
            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="In Review" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListView x:Name="InReviewList" 
                              SelectionMode="None" 
                              IsItemClickEnabled="False"
                              ItemTemplate="{StaticResource TaskItemTemplate}"/>
                </ScrollViewer>
            </Grid>

            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Done" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListView x:Name="DoneList" 
                              SelectionMode="None" 
                              IsItemClickEnabled="False"
                              ItemTemplate="{StaticResource TaskItemTemplate}"/>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Page>